<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_cert_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="证件类型"
            style="@style/table_txt_comm"/>

        <!--android:layout_height="30dp"-->
        <Spinner
            android:id="@+id/sp_cert_type"
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tv_cert_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="证件号码"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            style="@style/table_txt_comm"/>

        <EditText
            android:id="@+id/edt_id_code"
            android:layout_weight="27"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            style="@style/table_txt_comm"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="姓名"
            style="@style/table_txt_comm" />

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text=""
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            style="@style/table_txt_comm" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="性别"
            style="@style/table_txt_comm" />

        <Spinner
            android:id="@+id/sp_sex_type"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            style="@style/table_txt_comm" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_visitor_phone"
            android:text="来访电话"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/table_txt_comm" />
        <EditText
            android:id="@+id/edt_visitor_phone"
            android:text=""
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:inputType="phone"
            android:digits="0123456789"
            android:maxLength="11"
            android:layout_weight="10"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/table_txt_comm" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_visitor_unit"
            android:text="来访单位"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/table_txt_comm"/>
        <EditText
            android:id="@+id/edt_visitor_unit"
            android:text=""
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:layout_weight="10"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/table_txt_comm" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_goods"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="携带物品"
            style="@style/table_txt_comm" />
        <EditText
            android:id="@+id/edt_goods"
            android:text=""
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:layout_weight="10"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/table_txt_comm" />
    </LinearLayout>
</LinearLayout>